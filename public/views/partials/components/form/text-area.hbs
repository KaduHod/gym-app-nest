<textarea 
    rows="{{ rows }}" 
    cols="{{ cols }}"
    name="{{ name }}" 
    placeholder="{{ placeholder }}"
    {{#if id}}
        id="{{id}}"
    {{/if}}
    {{#if value}}
        value="{{ value }}"
    {{/if}}
    {{#if pattern}}
        pattern={{ pattern }}
    {{/if}}
    {{#if req}}
        required="true"
    {{/if}}
    class="
        focus:outline-none
        rounded-lg
        border
        text-white
        app-input-bg
        border-zinc-700
        caret-gray-400
        {{ classes }}
    ">
    {{ value }}
    </textarea>