<input 
    type="{{ type }}" 
    name="{{ name }}" 
    placeholder="{{ placeholder }}"
    {{#if id}}
        id="{{ id }}"
    {{/if}}
    {{#if value}}
        value="{{ value }}"
    {{/if}}
    {{#if pattern}}
        pattern={{ pattern }}
    {{/if}}
    {{#if req}}
        required="true"
    {{/if}}
    class="
        focus:outline-none
        rounded-lg
        text-white
        app-input-bg
        border
        border-zinc-700
        p-2
        autofill:bg-zinc-900
        {{ classes }}
    ">