<input 
    type="{{ type }}" 
    name="{{ name }}" 
    placeholder="{{ placeholder }}"
    {{#if id}}
        id="{{ id }}"
    {{/if}}
    {{#if value}}
        value="{{ value }}"
    {{/if}}
    {{#if pattern}}
        pattern={{ pattern }}
    {{/if}}
    {{#if req}}
        required="true"
    {{/if}}
    class="
        focus:outline-none
        rounded-[2rem]
        text-white
        bg-red-950
        p-2
        {{ classes }}
    ">