<div class="flex flex-col w-100 h-100 px-2 z-20">
    {{#each muscles}}
        {{#dropDown (concat this.id "-container") this.name "p-2 mb-1 hover:-skew-x-2 bg-red-700 duration-100 rounded" }}
            {{#each this.musclePortions}}
                <div class="p-1" id="{{this.id}}-portion" data-muscle-portion="true" data-drop-down-allow-close="true">
                    {{> components/link link=(concat "http://localhost:4567/muscles/" this.id) classes="translate-y-0.5 hover:text-red-900"  title=this.name }}    
                </div>
            {{/each}}
        {{/dropDown }}
    {{/each}}     
</div>